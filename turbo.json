{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**", "package/**", ".svelte-kit/**"]
		},
		"lint": {
			"dependsOn": ["^lint"],
			"cache": false
		},
		"web#build": {
			"dependsOn": ["^build"],
			"env": ["./apps/api/.env.production"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"api#build": {
			"dependsOn": ["^build"],
			"env": ["./apps/web/.env.local"],
			"outputs": ["dist/**"]
		},

		"dev": {
			"persistent": true,
			"cache": false
		},
		"clean": {
			"cache": false
		},
		"deploy": {
			"dependsOn": ["build", "lint"]
		}
	}
}
