{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"lint": {
			"dependsOn": ["^lint"],
			"cache": false
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"clean": {
			"cache": false
		},
		"deploy": {
			"dependsOn": ["build", "lint"]
		}
	}
}
